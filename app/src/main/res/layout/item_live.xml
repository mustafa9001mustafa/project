<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".app.fragment.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/cool_black"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="@dimen/_15sdp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/_2sdp"
                android:layout_height="0dp"
                android:background="@color/colorSplashBackground"
                android:fontFamily="@font/md"
                android:paddingHorizontal="@dimen/_5sdp"
                android:text="|"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintBottom_toBottomOf="@+id/contre_free"
                app:layout_constraintStart_toEndOf="@+id/lottie_share"
                app:layout_constraintTop_toTopOf="@+id/name_free"
                app:layout_constraintVertical_bias="0.0" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_share"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:rotation="-90"
                app:lottie_rawRes="@raw/live" />


            <TextView
                android:id="@+id/contre_free"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:fontFamily="@font/md"
                android:text="محكمة الاحتلال العسكرية تمدد اعتقال الشقيقين عمار ومراد الحمور من مدينة جنين المحتلة، ليومين بحجة استكمال التحقيق معهم فى مركز الجلمة وهما معتقلان منذ شهر"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lottie_share"
                app:layout_constraintTop_toBottomOf="@+id/name_free" />


            <TextView
                android:id="@+id/name_free"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:fontFamily="@font/md"
                android:paddingHorizontal="@dimen/_5sdp"
                android:text="تمديد الإعتقال لشقيقين من مدينة جنين"
                android:textAlignment="viewStart"
                android:textColor="#FE4B5B"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lottie_share"
                app:layout_constraintTop_toTopOf="parent" />

<!--            <com.mikhaellopez.circularimageview.CircularImageView-->
<!--                android:id="@+id/image_adv"-->
<!--                android:layout_width="@dimen/_65sdp"-->
<!--                android:layout_height="@dimen/_65sdp"-->
