<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".app.fragment.bsec.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        app:cardBackgroundColor="@color/cool_black3"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/_2sdp"
                android:layout_height="0dp"
                android:background="@color/colorSplashBackground"
                android:fontFamily="@font/md"
                android:paddingHorizontal="@dimen/_5sdp"
                android:text="|"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintBottom_toBottomOf="@+id/contre_free"
                app:layout_constraintStart_toEndOf="@+id/lottie_share"
                app:layout_constraintTop_toTopOf="@+id/name_free"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/lottie_share"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/logo_asra"
                app:layout_constraintBottom_toBottomOf="parent"
                android:rotation="90"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_free"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:fontFamily="@font/md"
                android:paddingHorizontal="@dimen/_1sdp"
                android:textSize="@dimen/_17ssp"
                android:text="تمديد الإعتقال لشقيقين من مدينة جنين"
                android:textAlignment="viewStart"
                android:textColor="@color/colorSplashBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lottie_share"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/contre_free"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:fontFamily="@font/md"
                android:text="محكمة الاحتلال العسكرية تمدد اعتقال الشقيقين عمار ومراد الحمور من مدينة جنين المحتلة، ليومين بحجة استكمال التحقيق معهم فى مركز الجلمة وهما معتقلان منذ شهر"
                android:textAlignment="viewStart"
                android:textColor="@color/cool_black_mode"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lottie_share"
                app:layout_constraintTop_toBottomOf="@+id/name_free" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>